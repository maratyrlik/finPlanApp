{
	"compilerOptions": {
		"types": ["react", "react-dom"],
		"target": "ES2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/auth/*": ["src/modules/auth/*"],
			"@/log/*": ["src/modules/log/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": ["node_modules"]
}
